      %br
      %br
      %br
      %form
        %input.text{ :type => "text", :size => 55, :title => "Google Search", :value => "" }
        %br
        %input{ :type => "button", :value => "Google Search", :id => "search" }
        %input{ :type => "button", :value => "I'm Feeling Lucky", :id => "lucky" }

      #instructions
        %div
          \:)

