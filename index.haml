%html
  %head
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "application.js", :type => "text/javascript" }
    %style{ :rel => "text/css" }
      :plain
        * {
        font-family:arial,sans-serif;
        }
        #logo { position: relative; top: 2em; }
        .logo { font-size: 1.5em; color: #444; }
        input.text { font-size: 1.0em; }
        #fake_mouse { position: absolute; top: 100px; left: 100px; }
        #instructions {
        position: relative; top: 50px;
        font-size: 1.2em; color: #999;
        width: 334px; height: 84px;
        background-image: url(images/instructions_bg.png);
        }
        #instructions > div { padding-top: 1.5em }
        #link { position: relative; top: 60px; font-size: 1.1em; color: #555 }
        #footer { position: relative; top: 100px; border-top: solid 1px #ddd; padding-top: 0.5em }
        #footer a { color: #999; text-decoration: none; font-size: 0.9em; }
        #about { position: relative; top: 100px; padding-top: 0.5em; color: #666 }
